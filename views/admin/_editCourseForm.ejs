<h2>Upravit kurz</h2>

<div>
    <form action='/admin/courses/edit-course/<%= course.id %>' method='post'>

        <label>
            Název Kurzu
            <input type="text" name="title" placeholder="Název" class="input" value="<%= course.title %>"/>
        </label>

        <label>
            Popis kurzu
            <input type="text" name="description" placeholder="Popis" class="input" value="<%= course.description %>"/>
        </label>

        <button type='submit'>Přidat</button>
    </form>
</div>