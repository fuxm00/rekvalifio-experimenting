<div id="offer-heading-box">
    <h2 id="offer-heading">Aktuální nabídka</h2>
</div>


<ul id="offers-list">

    <% for (const offer of offers) { %>
        <li class="offer-item">
            <a href="/course-category/<%= offer.categoryId %>" class="offer-item-link"><%= offer.formatedStartDate %>
                - <%= offer.formatedEndDate %> - <%= offer.title %></a>
        </li>
    <% } %>

</ul>